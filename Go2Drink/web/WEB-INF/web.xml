<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>PerformanceFilter</filter-name>
        <filter-class>com.g2d.web.PerformanceFilter</filter-class>
        <init-param>
            <param-name>prefix</param-name>
            <param-value>效能監測</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>PerformanceFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ImageCheckServlet</servlet-name>
        <servlet-class>com.g2d.view.ImageCheckServlet</servlet-class>
        <init-param>
            <param-name>len</param-name>
            <param-value>4</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageCheckServlet</servlet-name>
        <url-pattern>/images/check.jpg</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterImageCheckServlet</servlet-name>
        <servlet-class>com.g2d.view.ImageCheckServlet</servlet-class>
        <init-param>
            <param-name>len</param-name>
            <param-value>7</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterImageCheckServlet</servlet-name>
        <url-pattern>/images/Register_check.jpg</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <security-constraint>
        <display-name>Retail</display-name>
        <web-resource-collection>
            <web-resource-name>RetailPage</web-resource-name>
            <description/>
            <url-pattern>/Retail.jsp</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
</web-app>
